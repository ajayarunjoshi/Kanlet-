<apex:page >
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockSection title="Sum of EVAN OR ODD" columns="1">
                <apex:inputText label="Enter The Number"/> 
                <apex:selectRadio label="Select Your Choice">
                    <apex:selectOption itemLabel="Even" itemValue="E"/>
                    <apex:selectOption itemLabel="ODD" itemValue="O"/>
                </apex:selectRadio>
                
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Factorial" columns="1">
                <apex:inputText label="Enter The Number"/>
                 </apex:pageBlockSection>
            
            <apex:pageBlockSection title="Result" columns="1">
                <apex:commandButton value="Calculate"/>
                <apex:outputText label="The Result Is "></apex:outputText>
                </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>